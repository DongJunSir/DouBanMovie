/* user.wxss */
.user_back{
  height:150px;
  background-color: rgba(30,152,245,0.5);
  text-align: center;
  padding:20px 0;
  position:relative;
}
.user_image{
  width:80px;
  height:80px;
  background-color:#fff;
  position:absolute;
  top:15%;
  left:50%;
  transform: translate(-50%,0%);
  border-radius:40px;
}
.user_image image{
  width:100%;
  height: 100%;
}
.username{
  color:#fff;
  position:absolute;
  bottom:20%;
  left:50%;
  transform: translate(-50%,0%);
}
.user_want{
  width:100%;
  padding:10px;
  font-size: 14px;
  height: 40px;
  border-bottom:1px solid #ddd;
}
.want_detail{
  color:#666;
  width:100%;
  text-align: center;
  font-size: 12px;
}
.user_seen{
  width:100%;
  padding:10px;
  font-size: 14px;
  height: 40px;
  border-bottom:1px solid #ddd;
}
.seen_detail{
  color:#666;
  text-align: center;
  font-size: 12px;
}