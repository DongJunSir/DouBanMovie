/* detail.wxss */
/*顶部剧照部分*/
.movie_photo_back{
  height:200px;
  background-color: rgba(34,11,15,0.8);
  text-align: center;
  padding:20px 0;
}
.movie_photo_image{
  height: 100%;

}
.movie_photo_image image{
  width:40%;
  height:100%;
}
/*简介部分*/
.movie_introduce{
  padding:10px;
  width:100%;
  height:110px;
  overflow: hidden;
  box-sizing:border-box;
}
.left_panel{
  float: left;
  width:60%;
}
.left_panel view{
  margin:2px;
}
.right_panel{
  box-sizing: border-box;
  float: right;
  width:19%;
  height:72%;
  margin-right:20px;
  margin-top:10px;
  font-size: 12px;
  text-align: center;
  box-shadow: 0px 0px 1px 1px #888;
  padding-top:8px;
}
.movie_title{
  font-weight:bold;
}
.movie_others{
  font-size:12px;
}

/*按钮部分*/
.movie_btn{
  padding:10px 10px;
  box-sizing: border-box;
  text-align: center;
  overflow: hidden;
}
.movie_btn button{
  width:50%;
  float:left;
  font-size:12px;
  color: orange;
  font-weight: bold;
}
 /*播放*/
.video_play{
  margin-bottom:10px;
  font-size:14px;
  vertical-align: middle;
  line-height: 30px;
  border-bottom: 1px solid #E7E7E7;
  padding-left:10px;
  padding-right:10px;
  color:#888;
}
/*电影简介*/
.movie_review{
  box-sizing: border-box;
  font-size:12px;
  padding:0 10px;
}
.review_title{
  color:olive;
  margin:0 0 10px 0;
}

/*影人信息*/
.main-windows {
  width: 100%;
  padding:10px 10px;
  font-size: 12px;
}

.selection {
  display: flex;
  color: blue;
  width:200%;
}

.selection-item {
  color:#888;
  margin-right:10px;
  white-space: nowrap;
  text-align: center;
}
.selection-item image{
  width:70px;
  height:100px;
}
