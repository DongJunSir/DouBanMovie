
/*顶部input框*/
.section{
  height:25px;
  position:relative;
  padding:5px 10px;
}
.section input{
  width:100%;
  height:20px;
  background-color: #F3F3F3;
  border-radius: 3px;
  font-size: 14px;
  text-align: center;
}
/*scroll-view*/
.main-windows {
  width: 100%;
  padding:10px 0px;
}

.selection {
  display: flex;
  color: blue;
  width:180%;
}

.selection-item {
  background-color:#48C23D;
  width:40%;
  height:180px;
  color: #fff;
  padding: 5px;
  margin: 0 5px;
  white-space: nowrap;
  text-align: center;
  position: relative;
}
.category{
  position:absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
}
.selection-item .category_title{
  font-size: 25px;
  font-weight:bold;
}
.category_introduce{
  font-size: 14px;
}
.tv-item {
  background-color:#48C23D;
  width:95%;
  height:180px;
  color: #fff;
  margin: 0 5px;
  white-space: nowrap;
  text-align: center;
  position: relative;
}
