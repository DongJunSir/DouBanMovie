/**index.wxss**/
page{
  height: 100%;
  font-family: "Microsoft Yahei";
}
.content{
  min-height:100%;
}
swiper-item image{
  width:100%;
}
/*顶部input框*/
.section{
  height:25px;
  position:relative;
  padding:5px 10px;
}
.icon{
  font-weight: bold;
  color:#05B512;
  position:absolute;
}
.section input{
  width:85%;
  height:20px;
  float: right;
  background-color: #F3F3F3;
  border-radius: 3px;
  text-align: center;
  font-size: 14px;
}

/*导航nav*/
.nav{
  width:100%;
  overflow: hidden;
  background-color: #fff;
}
.nav view{
  float:left;
  width:50%;
  height:100%;
  color:#888;
  font-size:16px;
  text-align: center;
  line-height: 30px;
}
.nav .selectedNav{
  border-bottom:2px solid red;
  color:#000; 
}

/*电影内容*/
.movie{
  padding-top:5px;
  padding-bottom:5px;
  display:flex;
  border-bottom:1px solid #888;
}

.pic image{
  width:100px;
  height:150px;
  vertical-align: top;
  margin-left:5px;
}
.movie-info{
  padding-left:20px;
  padding-top:15px;
}
.base-info{
  color:#000;
  line-height:20px;
  font-size:12px;
}
.movie_title{
  font-size:14px;
  font-weight: bold;
}

