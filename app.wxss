/**app.wxss**/
Page{
  font-family: "Microsoft Yahei";
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  font-family: "Microsoft Yahei";
} 

/*导航nav通用样式*/
.nav{
  width:100%;
  overflow: hidden;
  background-color: #fff;
  border-bottom: 1px solid #ccc;
}
.nav view{
  float:left;
  height:100%;
  color:#888;
  font-size:16px;
  text-align: center;
  line-height: 30px;
}
.nav .selectedNav{
  border-bottom:2px solid red;
  color:#000; 
}
.space_bar{
  height:15px;
  width:100%;
  background-color: #F3F3F3;
}
